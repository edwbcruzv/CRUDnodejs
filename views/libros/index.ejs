<%- include ../layouts/cabecera.ejs %>
        <br/>
        <br/>
        <a class="btn btn-primary" href="/libros/crear" type="button">Crear un nuevo libro</a>
        <br/>
        <table class="table table-bordered  table-responsive">
            <thead class="thead-inverse">
                <tr>
                    <th>#</th>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>

                    <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                    
                    
                    <tr>
                        
                        <td><%=libro+1%></td>
                        <td><%=libros[libro].id%></td>
                        <td><%=libros[libro].nombre%></td>
                        <td>
                            <img src="Images/<%=libros[libro].imagen%>" class="img-thumbnail" alt="" width="100">
                        </td>
                        
                        <td>
                            <div class="btn-group-vertical" role="group" aria-label="">
                                <form class="d-flex" method="get" action="/libros/editar/<%=libros[libro].id%>">
                                     <button type="submit" class="btn btn-secondary">Editar</button>
                                </form>
                             </div>
                            <div class="btn-group-vertical" role="group" aria-label="">
                               <form class="d-flex" method="post" action="/libros/eliminar/<%=libros[libro].id%>">
                                    <button type="submit" class="btn btn-danger">Borrar</button>
                               </form>
                            </div>
                        </td>
                    </tr>

                    <% } %>
                    <tr>
                        <td scope="row"></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
        </table>
<%- include ../layouts/pie.ejs %>